<Window x:Class="ScreenRecorder_Server.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScreenRecorder_Server"
        mc:Ignorable="d"
        Title="Screen Recorder - Server" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="4.5*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Image Source="{Binding ScreenImage}" Grid.Row="0" Margin="15,15,15,5"/>
        <Button Content="Create Server" Grid.Row="1" Margin="300,10" FontFamily="Comic Sans MS" FontSize="20" FontWeight="Bold" Background="LightBlue" Command="{Binding CreateServerCommand}"/>
    </Grid>
</Window>
